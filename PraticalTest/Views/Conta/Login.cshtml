@model PraticalTest.Models.LoginViewModel


<div class="container-login">


        <div class="row">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Conta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @clas = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-dager", @Style = "color:red; " })
                <div class="form-group">
                    @Html.LabelFor(m => m.Usuario, new { @class = "col-md-2 control-label" })
                    <div class="cod-md-10">
                        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control" })

                    </div>
                    @Html.ValidationMessageFor(m => m.Usuario, "", new { @class = "text-dager", @Style = "color:red; " })
                </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Senha, new { @class = "col-md-2 control-label" })
                        <div class="cod-md-10">
                            @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })

                        </div>
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-dager", @Style = "color:red;" })
                    </div>
                    <dic class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            @Html.CheckBoxFor(m => m.LembrarMe)
                            @Html.LabelFor(m => m.LembrarMe)
                        </div>
                    </dic>
                    <div class="form-group">
                        <div class="col-md-10 col-md-offset-2">
                            <input type="submit" class="btn btn-success" value="Login" />

                        </div>

                    </div>
                }
            </section>
        </div>

</div>
@section Scripts{
   @Scripts.Render("~/bundles/jqueryval")
    }